<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SprintSpirit" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <style name="background">
        <item name="android:background">@drawable/background</item>
    </style>

    <style name="loginLogo">
        <item name="srcCompat">@mipmap/ic_launcher_foreground</item>
    </style>

    <style name="loginEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="backgroundTint">@color/primary</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:ems">10</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/edit_view_border</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="accentMessage">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#74000000</item>
    </style>

    <style name="bottomNavStyle">
        <item name="itemIconTint">@color/primary</item>
        <item name="itemRippleColor">@color/on_primary</item>
    </style>

    <style name="topToolbar">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="Theme.SprintSpirit" parent="Base.Theme.SprintSpirit" />
</resources>
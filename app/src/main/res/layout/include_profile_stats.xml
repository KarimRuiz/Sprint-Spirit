<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="hours"
            type="String"
            />
        <variable
            name="minutes"
            type="String"
            />

        <variable
            name="distance"
            type="String" />

        <variable
            name="pace"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_big">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_stats_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:text="@string/Your_stats"
                android:textSize="@dimen/font_big"
                android:layout_weight="1"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/sp_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:showDividers="middle">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_stats_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_godzilla"
                    android:text="@string/Time"
                    android:textSize="@dimen/font_normal" />

                <TextView
                    android:id="@+id/tv_stats_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_godzilla"
                    android:text="@string/Distance"
                    android:textSize="@dimen/font_normal" />

                <TextView
                    android:id="@+id/tv_stats_pace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_bigger"
                    android:text="@string/Pace"
                    android:textSize="@dimen/font_normal" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_stats_time_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_bigger"
                    android:text="@{hours + &quot;h &quot; + minutes + &quot;min&quot;}"
                    android:textSize="@dimen/font_normal" />

                <TextView
                    android:id="@+id/tv_stats_distance_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_bigger"
                    android:text="@{distance + &quot;km&quot;}"
                    android:textSize="@dimen/font_normal" />

                <TextView
                    android:id="@+id/tv_stats_pace_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_bigger"
                    android:text="@{pace + &quot;min/km&quot;}"
                    android:textSize="@dimen/font_normal" />
            </TableRow>

        </TableLayout>

    </LinearLayout>


</layout>
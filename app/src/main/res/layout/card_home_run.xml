<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_home_run"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="?attr/colorPrimary"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="1dp">

    <RelativeLayout
        android:id="@+id/card_home_run_layout"
        android:layout_width="387dp"
        android:layout_height="225dp">

        <com.google.android.gms.maps.MapView
            android:id="@+id/card_home_run_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:contentDescription="Run map"
            android:outlineAmbientShadowColor="#C13B3B"
            android:outlineSpotShadowColor="#7B3A3A"
            card_view:cameraZoom="8"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:liteMode="true"
            card_view:mapType="hybrid" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="wrap_content"
            android:background="@drawable/card_user_run_corner"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/profile_fragment_card_view"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:paddingStart="@dimen/margin_normal"
                app:cardCornerRadius="45dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_home_profile_picture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_account" />

            </androidx.cardview.widget.CardView>

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingStart="@dimen/margin_normal"
                android:paddingLeft="@dimen/margin_normal"
                android:paddingEnd="@dimen/margin_normal"
                android:paddingRight="@dimen/margin_normal"
                android:paddingBottom="@dimen/margin_normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_fragment_card_view">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/margin_small">

                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_normal"
                        android:text="@string/Distance"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_distance_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 km"
                        android:textColor="@color/black" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/margin_small">

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Time"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_time_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25 min"
                        android:textColor="@color/black" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_pace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Pace"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_pace_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 min/km"
                        android:textColor="@color/black" />
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="Pepe"
                android:textColor="@color/black"
                android:textSize="@dimen/font_normal"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/profile_fragment_card_view"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/card_user_run_corner"
                android:gravity="end"
                android:padding="@dimen/margin_small"
                android:text="12/5/2024"
                android:textColor="@color/black"/>

        </FrameLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
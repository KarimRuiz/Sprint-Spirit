<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SprintSpirit" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primary_night</item>
        <item name="colorPrimaryVariant">@color/primary_dark_night</item>
        <item name="colorOnPrimary">@color/on_primary_night</item>

        <item name="colorSecondary">@color/accent_night</item>
        <item name="colorSecondaryVariant">@color/accent_night</item>
        <item name="colorOnSecondary">@color/on_secondary_night</item>

        <item name="android:statusBarColor">@color/primary_dark_night</item>
    </style>

    <style name="background">
        <item name="android:background">@drawable/background_dark</item>
    </style>

    <style name="loginLogo">
        <item name="srcCompat">@mipmap/ic_launcher_night_foreground</item>
    </style>

    <style name="loginEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="backgroundTint">@color/primary_night</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:ems">10</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/edit_view_border</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="termAndConditions">
        <item name="android:textColor">@color/accent_night</item>
    </style>

    <style name="termAndConditionsPopUp">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:background">@drawable/rounded_corners</item>
    </style>

    <style name="termAndConditionsCloseButton">
        <item name="android:tint">@color/black</item>
        <item name="android:background">@drawable/bubble_circle</item>
        <item name="android:backgroundTint">#848383</item>
    </style>

    <style name="accentMessage">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/accent_night</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#61000000</item>
    </style>

    <style name="bottomNavStyle">
        <item name="itemIconTint">@color/primary_night</item>
        <item name="itemRippleColor">@color/on_primary_night</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@drawable/rounded_corners_big</item>
        <item name="android:backgroundTint">@color/primary_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButton</item>
    </style>

    <style name="PositiveButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/on_primary_night</item>
        <item name="backgroundTint">@color/on_primary_night</item>
    </style>

    <style name="NegativeButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:backgroundTint">#AF634C</item>
        <item name="backgroundTint">#AF634C</item>
    </style>

    <style name="filtersButton">
        <item name="android:background">@drawable/shape_filters_button_night</item>
    </style>

    <style name="filtersDrawerStyle">
        <item name="android:background">@color/black60</item>
    </style>

    <style name="topToolbar">
        <item name="android:background">@color/primary_night</item>
    </style>

    <style name="Theme.SprintSpirit" parent="Base.Theme.SprintSpirit" />
</resources>